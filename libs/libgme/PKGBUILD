pkgname=switch-libgme
pkgver=0.6.4
pkgrel=1
pkgdesc="Blargg's video game music emulation library"
url="https://github.com/libgme/game-music-emu"
license=('LGPL')
arch=('any')
options=(!strip libtool staticlibs)
groups=('switch-portlibs')
source=("${url}/releases/download/${pkgver}/libgme-${pkgver}-src.tar.gz")
sha256sums=(
  'SKIP'
)

prepare() {
	 cd "libgme-${pkgver}"
#  cd "libsmb2-${pkgver}"
#  patch -Np1 -i "$srcdir/switch.patch"
}

build() {
  cd "libgme-${pkgver}"

  source /opt/devkitpro/switchvars.sh
  
  aarch64-none-elf-cmake -DCMAKE_INSTALL_PREFIX=$PORTLIBS_PREFIX \
    -DCMAKE_C_FLAGS="$CFLAGS $CPPFLAGS" \
    -DCMAKE_CXX_FLAGS="$CFLAGS -lm" \
	-DENABLE_STATIC_RUNTIME=1 \
  #./bootstrap

  #./configure --prefix="${PORTLIBS_PREFIX}" --host=aarch64-none-elf \
  #  --disable-shared --enable-static --without-libkrb5 --disable-werror

  make
}

package() {
  cd "libgme-${pkgver}"

  source /opt/devkitpro/switchvars.sh

  make DESTDIR="${pkgdir}" install
  #install -Dm644 COPYING "${pkgdir}/opt/devkitpro/portlibs/switch/licenses/${pkgname}/LICENSE"
}
